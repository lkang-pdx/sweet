= form_for pin, :html => { :multipart => true } do |f|
  - if pin.errors.any?
    #error_explanation
      %h2
        = pluralize(pin.errors.count, "error")
        prohibited this pin from being saved:
      %ul
        - pin.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :pin_image
    = f.file_field :pin_image
  .actions
    = f.submit
